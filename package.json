{
  "name": "ceruleanjs",
  "version": "0.2.0",
  "description": "CeruleanJS JavaScript Chess Engine",
  "main": "index.js",
  "author": "joeyrobert <joey@joeyrobert.org>",
  "license": "GPL-3.0",
  "dependencies": {
    "ceruleanjs_opening_books": "^1.0.0"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "babelify": "^10.0.0",
    "browserify": "^17.0.0",
    "chai": "^4.3.4",
    "eslint": "^8.4.1",
    "mocha": "^9.1.3",
    "nexe": "4.0.0-beta.19",
    "uglify-js": "^3.14.4"
  },
  "repository": {
    "type": "git",
    "url": "https://joeyrobert@bitbucket.org/joeyrobert/ceruleanjs.git"
  },
  "bin": {
    "ceruleanjs": "./index.js"
  },
  "scripts": {
    "build-web": "browserify ./index.js -o ./dist/ceruleanjs.js -t [ babelify --presets [ @babel/preset-env ] ] && uglifyjs --compress -o ./dist/ceruleanjs.min.js -- ./dist/ceruleanjs.js",
    "build-windows": "copy /Y node_modules\\ceruleanjs_opening_books\\gm2001.bin dist\\book.bin && nexe -i ./index.js -o ./dist/ceruleanjs.exe --build --verbose",
    "debug": "node --inspect ./index.js",
    "debug-test": "node --inspect node_modules/.bin/mocha --no-timeouts --exit",
    "lint": "eslint src/*.js test/*.js",
    "start": "node --max-old-space-size=16384 ./index.js",
    "sts": "node  --max-old-space-size=16384 ./src/sts.js",
    "test": "mocha --no-timeouts --exit"
  }
}
